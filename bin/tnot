#!/bin/bash

RET=$1
if [[ "$RET" == '0' ]]; then
  TITLE="Terminal ${RET}"
  MESSAGE="Something done!!! - ret: [ ${RET} ]"
else
  TITLE="Terminal ${RET}"
  MESSAGE="Something failed!!! - ret: [ ${RET} ]"
fi

unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
  notify-send "${TITLE}" "${MESSAGE}"
elif [[ "$unamestr" == 'Darwin' ]]; then
  terminal-notifier -title "${TITLE}" -message "${MESSAGE}"
fi

exit ${RET}

